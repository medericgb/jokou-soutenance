<div class="bg-white w-screen h-96 rounded-lg shadow-xl lg:flex">
  <%if @offer.bid.product.product_backgrounds.attached?%>
      <%= image_tag @offer.bid.product.product_backgrounds[0], class:"w-1/3 lg:w-1/2 rounded-l-2xl"%>
  <%else%>
    <%=image_tag 'default_product_image.png', class:'w-1/3 lg:w-1/3 rounded-l-2xl'%>
  <%end%>
  <div class="p-10 space-y-10">
      <h2 class="mb-2 text-2xl text-center font-bold text-red-600"><%= @offer.bid.product.name.upcase%></h2>
      <p class="text-gray-600 pl-3 pr-3 text-xs"><%= @offer.bid.product.description%></p>
        <div class="flex space-x-16 m-10">
          <div class="col-span-2">
            <i class="fas fa-stopwatch w-5"></i> Statut :
            <span
              class="
                inline-flex
                items-center
                justify-center
                px-2
                py-1
                text-xl
                font-bold
                leading-none
                text-white
                bg-green-400
                rounded-full
              "
              >
                <%case @offer.bid.state
                  when 'wainting'%>
                      En attente
                  <%when 'actived'%>
                      Activée
                  <%when 'closed'%>
                      Fermée
                  <%when 'cancelled'%>
                      Annulée
                <%end%>
              </span
            >
          </div>
          <div>
            <i class="fas fa-stopwatch w-5"></i> Fin de l'enchère :
            <span
              class="
                inline-flex
                items-center
                justify-center
                px-2
                py-1
                text-xl
                font-bold
                leading-none
                text-white
                bg-green-400
                rounded-full
              "
              ><%=@offer.bid.end_date.strftime("%d/%m/%Y") + " à " + @offer.bid.end_date.strftime("%H:%M") %></span>
          </div>
        </div>
        <div class='flex space-x-16 m-10'>
          <div>
            <i class="fas fa-wallet w-5"></i> Votre offre :
              <span
                class="
                  inline-flex
                  items-center
                  justify-center
                  px-2
                  py-1
                  text-xl
                  font-bold
                  leading-none
                  text-white
                  bg-blue-400
                  rounded-full
                "
                ><%=@offer.amount%></span>
          </div>
          
        </div>
        <div class='flex space-x-16 m-10'>
          <div>
            <i class="fas fa-wallet w-5"></i> L'offre gagnante :
              <span
                class="
                  inline-flex
                  items-center
                  justify-center
                  px-2
                  py-1
                  text-xl
                  font-bold
                  leading-none
                  text-white
                  bg-blue-400
                  rounded-full
                "
                ><%=@offer.bid.offers.top.first.amount%></span>
          </div>
        </div>
          <div class="items-center">
            <%case @offer.bid.state
              when 'actived'%>
                <div class='flex justify-center items-center'>
                  <%= link_to 'Rencherir', bids_path, class:'bg-red-600 text-white text-xl px-5 py-2 font-medium rounded' %>
                </div>
            <%end%>
          </div>
    </div>
</div>

<% content_for :banners do %>
  <%=render 'shared/banners'%>
<% end %>

<% content_for :footer do %>
  <%=render 'shared/footer'%>
<% end %>

