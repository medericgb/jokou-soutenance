<style>
input[type=range]::-webkit-slider-thumb {
	pointer-events: all;
	width: 20px;
	height: 20px;
	-webkit-appearance: none;
}
</style>

<div class="flex justify-center items-center mt-6" data-controller="range-effect">
  <div class="relative max-w-xl w-full">
    <div>
      <input type="range" step="5" data-action='input->range-effect#mintrigger  '  class="absolute pointer-events-none appearance-none z-20 h-2 w-full opacity-0 cursor-pointer" data-range-effect-target="rangeFirst" data-search-target='minPrice' data-value="<%= @search_infos[:min_price] %>">
      <input type="range" step="5" data-action='input->range-effect#maxtrigger ' class="absolute pointer-events-none appearance-none z-20 h-2 w-full opacity-0 cursor-pointer" data-range-effect-target="rangeLast" data-search-target='maxPrice' data-value ="<%= @search_infos[:max_price] %>">
      <div class="relative z-10 h-1">
        <div class="absolute z-10 left-0 right-0 bottom-0 top-0 rounded-md bg-gray-200"></div>
        <div class="absolute z-20 top-0 bottom-0 rounded-md bg-red-700" data-range-effect-target="rangeBarColor"></div>
        <div class="absolute z-30 w-3 h-3 top-0 left-0 bg-red-700 rounded-full -mt-1" data-range-effect-target="rangeLeftThumb"></div>
        <div class="absolute z-30 w-3 h-3 top-0 right-0 bg-red-700 rounded-full -mt-1" data-range-effect-target='rangeRightThumb'></div>
      </div>
    </div>
    <div class="flex items-center justify-between pt-5 space-x-2 text-sm text-gray-700">
        <div class='w-1/2'>
          <input type="number" step = '5' data-range-effect-target='inputContainerLeft' min="0" max="1000000" maxlength="10" data-action='change->range-effect#changeRangeFirstValue '
            class="w-full text-xs px-3 py-1 text-center border border-gray-200 rounded-lg bg-gray-50 focus:border-red-400 focus:outline-none" data-search-target='minPrice'>
        </div>
        <div class="w-1/2">
          <input type="number" step = '5' data-range-effect-target='inputContainerRight' min="0" max="1000000" maxlength="10" data-action='change->range-effect#changeRangeLastValue'
            class="w-full text-xs px-3 py-1 text-center border border-gray-200 rounded-lg bg-gray-50 focus:border-red-400 focus:outline-none" data-search-target='maxPrice'>
        </div>
    </div>
  </div>
</div>