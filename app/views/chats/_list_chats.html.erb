<style>
  .h_10{  
    height:10%
  }
  .h_45{
    height:45%
  }
  .h_90{
    height:90%
  }
</style>

<div class="px-2 h-screen overflow-y-auto pt-20">
  <p class="text-3xl h_10">Discussions</p>

  
  <% if current_user.store %>
    <div class="w-full h_45 overflow-y-auto">
      <p class="text-lg mb-2 w-full py-1 rounded bg-red-500 text-white px-3">Conversation du store</p>
      <div>
        <%=render partial: 'chat', collection:@chat_from_store%>
      </div>
    </div>
  <% end %>
  <div class="<%= current_user.store ? 'w-full h_45 overflow-y-auto' : 'w-full h_90 overflow-y-auto'%>">
      <div class="flex flex-col py-1 pl-6 pr-2 w-64 bg-white flex-shrink-0">
        <div class="flex flex-row items-center">
          <div
            class="flex items-center justify-center h-10 w-10 mr-2"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"
              ></path>
            </svg>
          </div>
          <div class=" font-bold text-l ">Mes conversations</div>
        </div>
      <%=render partial: 'chat', collection:@chat_from_me%>
    </div>
  </div>
</div>
