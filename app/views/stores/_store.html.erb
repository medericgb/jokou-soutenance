<div class="w-full max-w-sm mx-auto rounded-md shadow-md overflow-hidden">
  <a href="<%= store_path(store)%>">
    <div class="flex items-end justify-end h-56 w-full overflow-none">
      <% if store.background.persisted? %>
        <%= image_tag store.background, class:'object-cover  h-64 w-full '%>
      <%else%>
        <%=image_tag 'App-Store.jpg', class:'h-64 w-full object-cover'%>
      <% end %>
    </div>
    <div class="px-5 py-3">
    <h3 class="text-gray-700 uppercase"><%= store.name %></h3>
    </div>
  </a>
</div>